<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nuance.nina.settings.SettingsActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1" >

            <LinearLayout
                android:id="@+id/gridLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/applicationName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Application Name" />

                <EditText
                    android:id="@+id/applicationNameInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout7"
                android:layout_below="@+id/gridLayout7"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/applicationVersion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Application Version" />

                <EditText
                    android:id="@+id/applicationVersionInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout8"
                android:layout_below="@+id/gridLayout8"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Company Name" />

                <EditText
                    android:id="@+id/companyNameInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout9"
                android:layout_below="@+id/gridLayout9"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/localeEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:text="Voice Locale" />

                <Spinner
                    android:id="@+id/localeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_weight="1"
                    android:prompt="@string/locale_prompt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout1"
                android:layout_below="@+id/gridLayout1"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/voiceEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Voice" />

                <EditText
                    android:id="@+id/voiceInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout2"
                android:layout_below="@+id/gridLayout2"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/serverApplicationName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Server App Name" />

                <EditText
                    android:id="@+id/serverApplicationNameInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout3"
                android:layout_below="@+id/gridLayout3"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/gatewayHost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Gateway Host" />

                <EditText
                    android:id="@+id/gatewayHostInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout5"
                android:layout_below="@+id/gridLayout5"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/gatewayPort"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="Gateway Port" />

                <EditText
                    android:id="@+id/gatewayPortInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout6"
                android:layout_below="@+id/gridLayout6"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="NMAID ID" />

                <EditText
                    android:id="@+id/nmaidIDInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gridLayout10"
                android:layout_below="@+id/gridLayout10"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/key"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="NMAID KEY" />

                <EditText
                    android:id="@+id/nmaidKeyInput"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_weight="1"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:lines="8"
                    android:inputType="textMultiLine" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp" >

                <Button
                    android:id="@+id/saveSettings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Save" />
            </LinearLayout>
        </TableLayout>
    </ScrollView>

</RelativeLayout>